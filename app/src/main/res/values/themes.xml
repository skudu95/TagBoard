    <style name="Theme.TagBoard" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/logo_color_blue</item>
        <item name="colorPrimaryDark">@color/logo_color_blue</item>
        <item name="colorAccent">@color/logo_color_light</item>
        <item name="android:textColorSecondary">@color/white</item>
<!--        <item name="android:textColorSecondary">@color/black</item>-->
    </style>

    <style name="Theme.TagBoard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowBackground">@drawable/app_gradient_color_bg</item>-->
    </style>


    <style name="Theme.TagBoard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TagBoard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customDialogTheme" parent="MaterialAlertDialog.Material3">
        <!-- Background Color-->
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <!--        <item name="colorOnSurface">@color/white</item>-->
        <item name="colorOnSurface">@color/logo_color_blue</item>
        <item name="buttonBarPositiveButtonStyle">@style/customDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/customDialogButtonStyle</item>
    </style>

    <style name="customDialogButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/transparent</item>

    </style>
